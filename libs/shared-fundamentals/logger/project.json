{
  "name": "nsk-shared-logger",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared-fundamentals/logger/src",
  "projectType": "library",
  "tags": [
    "layer:fundamentals",
    "domain:system-core",
    "iso:25010",
    "env:surface",
    "env:acid"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared-fundamentals/logger",
        "main": "libs/shared-fundamentals/logger/src/index.ts",
        "tsConfig": "libs/shared-fundamentals/logger/tsconfig.lib.json",
        "assets": ["libs/shared-fundamentals/logger/*.md", "libs/shared-fundamentals/logger/src/lib/i18n/*.json"],
        "clean": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}