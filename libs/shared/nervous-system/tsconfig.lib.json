/* [RUTA RELATIVA: libs/shared/nervous-system/tsconfig.lib.json] */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "composite": true,
    "noEmit": false,
    /* tsBuildInfoFile único para proteger la memoria de compilación */
    "tsBuildInfoFile": "../../../dist/out-tsc/tsbuildinfo/nsk-shared-nervous-system.tsbuildinfo",
    "types": ["node"]
  },
  /* DIPLOMACIA DE REFERENCIAS: El SNS requiere conocer la Matrix y el Logger */
  "references": [
    { "path": "../matrix-neural-bridge" },
    { "path": "../logger" }
  ],
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "jest.config.ts"]
}
