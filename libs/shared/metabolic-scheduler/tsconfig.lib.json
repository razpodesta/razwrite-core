/* [RUTA RELATIVA: libs/shared/metabolic-scheduler/tsconfig.lib.json] */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "composite": true,
    "noEmit": false,
    /* tsBuildInfoFile Ãºnico para evitar colisiones de memoria en el compilador */
    "tsBuildInfoFile": "../../../dist/out-tsc/tsbuildinfo/nsk-shared-metabolic-scheduler.tsbuildinfo",
    "types": ["node"]
  },
  /* DIPLOMACIA DE REFERENCIAS: El Scheduler requiere reportar al Logger y consultar la Matrix */
  "references": [
    { "path": "../logger" },
    { "path": "../matrix-neural-bridge" }
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "jest.config.ts"]
}
