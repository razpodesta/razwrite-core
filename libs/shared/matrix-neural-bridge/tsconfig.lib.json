 */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "rootDir": "src",
    "types": ["node"],
    /* M-019: Sincronia com o motor ESM 2026 */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    /* Saneamento: Desativado modo composite para evitar erro 6059 */
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}
