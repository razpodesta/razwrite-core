 */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "rootDir": "src",
    "types": ["node"],
    "composite": true,
    "declaration": true,
    "noEmit": false,
    "tsBuildInfoFile": "../../../dist/out-tsc/libs/bunkers/polymorphic-qr/tsconfig.lib.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "references": [
    { "path": "../../shared/crypto" },
    { "path": "../../shared/logger" },
    { "path": "../../shared/error-engine" }
